<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Action 1"
        android:id="@+id/buttonActionOne"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="onClickButtonActionOne" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Action 2"
        android:id="@+id/buttonActionTwo"
        android:layout_below="@+id/buttonActionOne"
        android:layout_alignRight="@+id/buttonActionOne"
        android:layout_alignEnd="@+id/buttonActionOne"
        android:onClick="onClickButtonActionTwo"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Action 3"
        android:id="@+id/buttonActionThree"
        android:layout_below="@+id/buttonActionTwo"
        android:layout_alignRight="@+id/buttonActionTwo"
        android:layout_alignEnd="@+id/buttonActionTwo"
        android:onClick="onClickButtonActionThree"/>
</RelativeLayout>